<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnShowToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="@string/show_toast" 
        android:onClick="tappedShowToast"/>

    <Button
        android:id="@+id/btnShowToastCenterText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnShowToast"
        android:layout_centerHorizontal="true"
        android:text="@string/toast_center_text" 
        android:onClick="tappedShowToastWithCenterText"/>

    <Button
        android:id="@+id/btnCenterToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnShowToastCenterText"
        android:layout_centerHorizontal="true"
        android:text="@string/center_toast" 
        android:onClick="tappedShowCenteredToast"/>

    <Button
        android:id="@+id/btnCenterToastAndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCenterToast"
        android:layout_centerHorizontal="true"
        android:text="@string/toast_with_both_centered"
        android:onClick="tappedCenterBoth" />

</RelativeLayout>
